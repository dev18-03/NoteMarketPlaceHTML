    <section id="progress notes">

        <div class="content-box-md">

            <div class="container">

                <!-- header Row -->
                <div class="row">

                    <!-- Main heading -->
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div id="heading-1">
                            Buyer Requests
                        </div>
                        <div class="elementcontainer">
                            <div class="search-container">
                                @*<img src="../image/mydownloads/search-icon.svg"
                                *@<img src="~/Image/BuyerReq/search-icon.svg" alt="search-icon" class="search-icon">
                                <input id="custom" type="text" placeholder="Search" class="search-box">
                            </div>

                            <a class="btn btn-general search-1 smooth-scroll" href="#" title="Search" role="button">Search</a>
                        </div>
                    </div>
                </div>
              
                <div class="table-box">
                    <div class=" table-responsive">
                       
                        <table class="table" id="tbl">
                            <thead>
                                <tr>
                                    <th scope="col">SR.NO</th>
                                    <th scope="col">Notetitle</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Buyer</th>
                                    <th scope="col">Sell Type</th>
                                    <th scope="col">price</th>
                                    <th scope="col">DOWNLOADED DATE/TIME</th>   

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;


                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @i
                                                @{i = i + 1;}
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.NoteTitle)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NoteCategory)</td> 
                                            <td>@Html.DisplayFor(modelItem => item.User1.EmailID)</td>
                                            <td>@if (item.IsPaid == true ) {
                                                <p>Paid</p>

                                                  }
                                            else { 
                                            <p>Free</p>
                                            }
                                            </td>
                                            <td>
                                                @if (item.IsPaid == true)
                                                {
                                                    @Html.DisplayFor(modelItem => item.PurchasePrice)
                                                }
                                                else
                                                {
                                                    <p>$0</p>
                                                }
                                            </td>
                                            
                                            <td>@Html.DisplayFor(modelItem => item.CreatedDate)
                                                <a href="#">
                                                   
                                                    <img src="~/Image/BuyerReq/eye.png" alt="eye"/>
                                                </a> 
                                                <div class="dropdown">
                                                    <button class="button dropdown-toggle" type="button" data-toggle="dropdown">
                                                        <img class="more" src="~/Image/BuyerReq/dots.png" alt="dots"/>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a href="#">Allow Download</a></li>
                                                    </ul>
                                                  </div>            
                                            </td>



                                        </tr>

                                      }
                                  }





                            </tbody>

                        </table>
                    </div>

                </div>


                <!-- pagination  -->
                <!--<div class="pagination">
